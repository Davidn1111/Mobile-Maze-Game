<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AMazeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeMsg"
        android:layout_gravity = "center"
        android:layout_marginTop = "60dp"
        android:textColor = "@color/black"
        android:textSize = "35sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chooseMsg"
        android:layout_gravity = "start"
        android:layout_marginTop = "40dp"
        android:layout_marginStart = "40dp"
        android:textColor = "@color/black"
        android:textSize = "20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skillLevelMsg"
        android:layout_gravity = "center"
        android:layout_marginTop = "30dp"
        android:textColor = "@color/black"
        android:textSize = "20sp"
        android:id = "@+id/mazeSizeText"
        />

    <SeekBar
        android:id="@+id/sizeSeekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:max="9"
        android:progress="0"
        android:scaleX="1.8"
        android:scaleY="1.8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mazeGenMsg"
        android:layout_gravity = "center"
        android:layout_marginTop = "20dp"
        android:textColor = "@color/black"
        android:textSize = "20sp"
        />

    <Spinner
        android:id="@+id/spinnerMazeGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/genSpinnerContent"
        android:minHeight="48dp" />

    <CheckBox
        android:id="@+id/roomCheckBox"
        android:checked = "true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="@string/roomCheckBoxMsg"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/revisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/revisit"
            android:backgroundTint = "@color/black"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/explore"
            android:backgroundTint = "@color/black"
            android:textSize="30sp"
            />

    </LinearLayout>

</LinearLayout>