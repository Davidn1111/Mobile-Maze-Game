<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background ="@drawable/losescreen"
    tools:context=".gui.LosingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of Path Taken: "
        android:layout_gravity = "center"
        android:layout_marginTop = "230dp"
        android:textColor = "@color/white"
        android:background="@color/squidPink"
        android:textSize = "23sp"
        android:id = "@+id/lPathLengthText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of Shortest Path: "
        android:layout_gravity = "center"
        android:layout_marginTop = "50dp"
        android:textColor = "@color/white"
        android:background="@color/squidPink"
        android:textSize = "23sp"
        android:id = "@+id/lShortestPathText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy Consumed: "
        android:layout_gravity = "center"
        android:layout_marginTop = "50dp"
        android:textColor = "@color/white"
        android:background="@color/squidPink"
        android:textSize = "23sp"
        android:id = "@+id/lEnergyConsumptionText"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop = "25dp"
        android:text="Retry"
        android:backgroundTint="@color/squidPink"
        />

</LinearLayout>